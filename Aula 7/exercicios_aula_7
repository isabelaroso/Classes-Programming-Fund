// EXERCÍCIO 6
// Larissa só vai sair para a festa se não estiver chovendo ou se ela tiver guarda chuva
// No dia da festa, Larissa olha pela janela e vê que está chovendo, mas ela não possui guarda chuva
// Pense em como formular o problema em um algoritmo e, então, printe no console se a Larissa irá para a festa

let tempo = "chuva";    
let guardaChuva = "levou";

if (tempo === "chuva" || guardaChuva === "levou") {
    console.log(`Larissa vai à festa`);
} else {
    console.log(`Larissa não vai à festa`);
}
    
//OUU 
 
let tempo = true;     // está chovendo
let levou = false;    // Larissa não levou o guarda-chuva

let tempo = chuva;
let levou = false;

if (!tempo || guardaChuva) {
    console.log(`Larissa vai à festa);
} else {
    console.log(´Larissa não vai à festa´);
}
