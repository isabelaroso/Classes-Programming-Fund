// EXERCÍCIO 1
// Ana trabalhou como freelancer e ganha R$30 por hora. 
// No mês passado, ela trabalhou 160 horas. Quanto ela recebeu no final do mês?
let valorHora = 30;
let horasTrabalhadas = 160;
let salario = horasTrabalhadas * valorHora;
// (`${nome} tem ${idade} anos, pesa ${peso} kg`)
console.log (salario);
console.log (`Ana trabalhou ${horasTrabalhadas} horas por ${valorHora} reais a hora e recebeu ${salario} reais de salário no mês`);

