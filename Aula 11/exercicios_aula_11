// João está colhendo maças. Ele colheu maças durante 7 dias. Cada dia ele conta quantas colheu. 
// Imprima quantas maçãs João colheu em cada dia

//pseudocódigo
// para dia de 1 até 7 faça
//      perguntar quantas maças João colheu no dia
//      imprimir ""No dia [dia], Joao colheu [qntd] maças."
//  fim para

const prompt = require ("prompt-sync")()

for (let dia = 1; dia <= 10; dia ++){
    let quant = prompt (`Quantas maçãs João colheu no dia ${dia}?`);

    console.log(`No dia ${dia}, João colheu ${quant} maçãs.`);
}

//Exercício 3. Você recebeu 10 número para analisar. Conte quantos são positivos, negativos e zeros. 

// const prompt = require ("prompt-sync")()  -> já declarado

let positivos = 0;
let negativos = 0;
let zeros = 0;

for (let i = 1; i <= 10; i++) {
    let num = parseInt(prompt(`Digite o número ${i}:`));

    if (num > 0) {
        positivos++; // o mesmo que positivos += 1
    } else if (num < 0) {
        negativos++;
    } else {
        zeros++;
    }
}

console.log(`Quantidade de positivos: ${positivos}`);
console.log(`Quantidade de negativos: ${negativos}`);
console.log(`Quantidade de zeros: ${zeros}`);

